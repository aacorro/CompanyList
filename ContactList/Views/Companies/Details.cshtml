@model ContactList.Models.Company


<h1 class="text-center">Company Info</h1>

<div class="row position-relative">
    <div class="col-md-4 position-absolute top-0 start-50 translate-middle-x">
       @* <form asp-action="Details">*@
            <input type="hidden" asp-for="CompanyId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" disabled  />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" disabled  />
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
            <input asp-for="State" class="form-control" disabled  />
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
            <input asp-for="PostalCode" class="form-control" disabled  />
            </div>
            <div class="form-group">
            <a asp-controller="Companies" asp-action="Edit" asp-route-id="@Model?.CompanyId" class="btn text-light bg-success my-2 ">Edit</a>
        </div>
        @*</form>*@
        <div>
            <a asp-controller="Companies" class="btn text-light my-2 bg-primary " asp-action="Index">Back to List</a>
        </div>

    </div>
</div>





